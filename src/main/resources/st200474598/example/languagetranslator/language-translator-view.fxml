<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>

<VBox id="container" alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.2" fx:controller="st200474598.example.languagetranslator.LanguageTranslatorController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label id="inputLabel" text="Enter the text you want to translate" />

    <TextArea fx:id="inputText" />

    <HBox alignment="CENTER" spacing="50.0">

        <VBox alignment="CENTER" spacing="10.0">
            <Label id="selectorLabel" text="Select output language" />

            <ComboBox fx:id="languageSelector" />
        </VBox>

        <Button onAction="#onTranslateButtonClick" text="Translate!" />
    </HBox>

    <TextArea fx:id="translatedText" disable="true" />
   <AmbientLight color="CHARTREUSE" lightOn="true" />
   <PerspectiveCamera />
   <PointLight lightOn="true">
      <color>
         <Color red="0.4189205765724182" green="0.6052631735801697" blue="0.23257797956466675" />
      </color>
   </PointLight>
</VBox>
