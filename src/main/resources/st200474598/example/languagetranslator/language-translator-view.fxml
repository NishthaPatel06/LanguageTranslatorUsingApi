<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="st200474598.example.languagetranslator.LanguageTranslatorController"
      id="container">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Enter the text you want to translate"
            id="inputLabel"/>

    <TextArea fx:id="inputText"/>

    <HBox alignment="CENTER" spacing="50.0">

        <VBox alignment="CENTER" spacing="10.0">
            <Label text="Select output language"
                   id="selectorLabel"/>

            <ComboBox fx:id="languageSelector"/>
        </VBox>

        <Button text="Translate!" onAction="#onTranslateButtonClick"/>
    </HBox>

    <TextArea fx:id="translatedText" disable="true"/>
</VBox>
